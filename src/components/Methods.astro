---
const props = Astro.props
const list = props.list
const label = props.label
const addLinks = true
const mozPath = "https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/Array/"
---

<ul>
  <li>
    {label}:
    {list.map((item) => {
      const getItem = () => {
        if ( addLinks ) {
          return (<a href={mozPath + item.name} target="_blank">{item.name}()</a>)
        } else {
          return (item.name + '()')
        }
      }
      return (
      <ul>
        <li>{getItem()}: {item.desc}</li>
      </ul>
    )})}
  </li>
</ul>
